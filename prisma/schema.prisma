generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id        String   @id @default(uuid())
  name      String   @default("")
  email     String   @unique
  password  String
  avatarUrl String?  @db.Text
  notificationsEnabled Boolean @default(true)
  darkMode  Boolean @default(false)
  currency  String   @default("IDR")
  language  String   @default("id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
  categories   Category[]
  wallets      Wallet[]
  notifications Notification[]
  pushSubscriptions PushSubscription[]

}

model Category {
  id     String @id @default(uuid())
  name   String
  type   String // INCOME | EXPENSE
  icon   String @default("fa-tag")
  userId String
  user   User   @relation(fields: [userId], references: [id])

  transactions Transaction[]


  @@unique([name, userId, type])
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Decimal
  date        DateTime @default(now())
  note        String?
  productName String? // New Field: For Expense product details

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])

  // Advanced Entry Fields
  quantity     Int      @default(1)
  pricePerUnit Decimal? // Optional, if populated we calculate amount
  promoType    String? // NONE, PERCENT, FIXED, BUY_X_GET_Y
  promoValue   Decimal? // For PERCENT or FIXED
  promoBuyX    Int?     // For BUY_X_GET_Y
  promoGetY    Int?     // For BUY_X_GET_Y

  // Wallet Relation
  walletId String?
  wallet   Wallet? @relation(fields: [walletId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum WalletType {
  CASH
  BANK
  WALLET
}

model Wallet {
  id             String     @id @default(uuid())
  name           String
  type           WalletType @default(CASH) // New Field
  initialBalance Decimal?   @default(0)
  userId         String
  user           User       @relation(fields: [userId], references: [id])

  transactions Transaction[]

  @@unique([name, userId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  endpoint  String   @unique @db.Text
  p256dh    String   @db.Text
  auth      String   @db.Text
  expiresAt DateTime?
  userAgent String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
